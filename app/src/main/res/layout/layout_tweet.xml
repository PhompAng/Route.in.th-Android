<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Airport Rail Link"
        android:textColor="@color/textPrimary"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/img"
        app:layout_constraintLeft_toRightOf="@+id/img"/>

    <TextView
        android:id="@+id/screen_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="\@AirportRailLink"
        android:textSize="18sp"
        android:textColor="@color/textSecondary"
        android:fontFamily="sans-serif-light"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="@+id/name"
        app:layout_constraintLeft_toRightOf="@+id/name"
        app:layout_constraintRight_toLeftOf="@+id/time"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jan 16"
        android:textSize="16sp"
        android:textColor="@color/textSecondary"
        android:fontFamily="sans-serif-light"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/name"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="12/01/60 เวลา 07.16น. แจ้งผู้โดยสารโปรดเผื่อเวลาในการเดินทางเพื่อซื้อคูปอง เนื่องจากมีผู้โดยสารหนาแน่นในสถานี"
        android:textSize="18sp"
        android:textColor="@color/textPrimary"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintLeft_toLeftOf="@+id/name"
        app:layout_constraintRight_toRightOf="@+id/time"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>
