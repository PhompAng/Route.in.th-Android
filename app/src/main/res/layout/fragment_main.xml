<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/departTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Depart"/>
    <Spinner
        android:id="@+id/departSystem"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/departTextView"/>
    <Spinner
        android:id="@+id/departStation"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/departSystem"
        android:layout_toEndOf="@+id/departSystem" />

    <TextView
        android:id="@+id/arriveTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/departSystem"
        android:textSize="24sp"
        android:text="Arrive"/>
    <Spinner
        android:id="@+id/arriveSystem"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/arriveTextView"/>
    <Spinner
        android:id="@+id/arriveStation"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/arriveSystem"
        android:layout_toEndOf="@+id/arriveSystem" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/arriveSystem"
        android:backgroundTint="@color/colorAccent"
        android:text="Calculate"/>

</RelativeLayout>
