<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/routeItem">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/resultStationImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/view_all_station_label"
        android:id="@+id/viewCodeLabel"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:text="viewCode"
        android:visibility="gone"
        android:layout_gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/resultStationImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_unfold_more_black_24dp"
        android:id="@+id/showIcon"
        android:visibility="gone"
        android:tint="@color/textSecondary"
        android:layout_gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/resultStationImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Station Name"
        android:id="@+id/resultStationName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="100dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heading"
        android:gravity="left"
        android:textSize="10dp"
        android:visibility="gone"
        android:id="@+id/resultHeadingLabel"
        app:layout_constraintTop_toBottomOf="@id/resultStationName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="100dp"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/infoLabel"
        android:src="@drawable/ic_info_black_24dp"
        android:tint="@color/gray_active_icon"
        android:layout_gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"/>

</android.support.constraint.ConstraintLayout>
