<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/vertical_padding"
    android:paddingBottom="@dimen/vertical_padding"
    android:paddingStart="@dimen/horizontal_padding"
    android:paddingEnd="@dimen/horizontal_padding"
    android:background="@color/colorPrimaryLight">

    <TextView
        android:id="@+id/originText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/origin"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/origin_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ARL"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/originText"
        app:layout_constraintLeft_toLeftOf="@+id/originText"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/origin_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suvarnabhumi"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/origin_system"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/origin_station_chip"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:background="@drawable/arl_chip"
        android:gravity="center"
        android:elevation="1dp"
        android:text="A1"
        android:textSize="13sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/origin_station"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/destinationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/destination"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/destination_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BTS"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/destinationText"
        app:layout_constraintRight_toRightOf="@+id/destinationText"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/destination_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mo Chit"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/destination_system"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/destination_station_chip"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:background="@drawable/bts_chip"
        android:gravity="center"
        android:elevation="1dp"
        android:text="BN8"
        android:textSize="13sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/destination_station"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp" />

    <ImageView
        android:layout_height="36dp"
        android:layout_width="36dp"
        android:background="@drawable/ic_swap_horiz_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@android:color/white"/>

</android.support.constraint.ConstraintLayout>
